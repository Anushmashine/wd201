{
  "name": "todo-cli",
  "version": "1.0.0",
  "description": "A command-line todo application with testing capabilities",
  "main": "todo.js",
  "scripts": {
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write .",
    "prepare": "husky",
    "precommit": "npm run lint && npm run format && npm test"
  },
  "keywords": [
    "todo",
    "cli",
    "productivity"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "prettier": "^3.2.5"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": ["text", "lcov"]
  }
}
