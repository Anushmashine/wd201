<!-- views/todos.ejs -->
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Completed</th>
    </tr>
  </thead>
  <tbody>
    <% todos.forEach(todo => { %>
      <tr class="<%= todo.completed ? 'completed' : '' %>">
        <td><%= todo.id %></td>
        <td><%= todo.title %></td>
        <td><%= todo.completed ? "Yes" : "No" %></td>
      </tr>
    <% }) %>
  </tbody>
</table>
